{
    "gitbook": ">=2.0.0",
    "title": "Awesome responsive website workshop",
    "description": "Anyone can build an awesome responsive website with the basics of HTML and CSS knowledge, using frameworks like Bootstap and Salesforce Lightning Design System",
    "structure": {
        "readme": "introduction.md"
    },
    "styles": {
        "website": "styles/website.css",
        "ebook": "styles/ebook.css",
        "pdf": "styles/pdf.css",
        "mobi": "styles/mobi.css",
        "epub": "styles/epub.css"
    },
    "plugins": [
        "toggle-chapters",
        "codeblock-disable-glossary",
        "richquotes",
        "disqus",
        "gist",
        "exercises",
        "quizzes",
        "toolbar",
        "ga"
    ],
    "pluginsConfig": {
        "richquotes": {
            "todos": true
        },
        "disqus": {
            "shortName": "awesome-responsive-website"
        },
        "ga": {
            "token": ""
        },
       "toolbar": {
           "buttons":
           [
               {
                   "label": "Gitter Chat",
                   "icon": "fa fa-comments-o",
                   "url": "https://gitter.im/practicalli/chat?utm_source=badge&utm_medium=badge&utm_campaign=pr-badge"
               },
               {
                   "label": "GitHub",
                   "icon": "fa fa-github",
                   "url": "https://github.com/agileforce"
               },
               {
                   "label": "Search page title on StackOverflow",
                   "icon": "fa fa-stack-overflow",
                   "url": "http://stackoverflow.com/search?q={{title}}"
               }
           ]
       }
    },
    "links": {
        "sidebar": {
            "W3 Schools": "http://www.w3schools.com/",
            "Bootstrap": "http://getbootstrap.com/",
            "Salesforce LDS": "https://www.lightningdesignsystem.com/"
        }
    },
    "variables": {
        "host": "agileforce.co.uk"
    }
}
